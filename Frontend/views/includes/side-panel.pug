div.panel
  div
    button(type="button" id="modalButton") 
      div Workspace 
      div User
    div#modal 
      div.userName Aristotle Modal
      div.modalContent
        img(src="https://spartacus-educational.com/00aristotle.jpg" id="avatar")
      div
        button(type="button" id="profile") View profile
      div
        button(type="button" id="preferences") Preferences
      div
        button(type="button" id="invitation") Invite People to Workspace
      div
        //- this needs to be changed to the variable workspace
        button(type="button" id="sign-out-workspace") Sign out of workspace 
  div.channels
    div
      button(type="button" id="channelDropdown") Channels
      div.channel
        div: a(href="/general" class="links") # General
        div: a(href="/help-requests" class="links") # Help-Requests
        div: a(href="/sign-up" class="links") + Add
    
  div.directMessage
    div
      button(type="button" id="dmDropdown") Direct Message
      div.dms
        div: a(href="/log-in" class="links") @ User1
        div: a(href="/log-in" class="links") @ User2
        div: a(href="/sign-up" class="links") + Invite People
  
div.editProfile
  form.edit-profile-form
    include edit-profile.pug
  div#btnSaveEdit
    button(type='submit') Save changes
  div#btnCancelEdit
    button(type='cancel') Cancel
  div.editProfileImg
    button(type='submit') Update Photo
