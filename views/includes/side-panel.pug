          button.modal-button(align="center" type="submit" id="sign-out-workspace") Sign Out
  div.channels
    div
      button(type="button" id="channelDropdown") Channels
      div.channel
        div#channelNames
        div#addChannel.links + Add
        div#addChannelModal
          div#addChannelFormContainer
            form.form#addChannelForm
              div  
                label(for="name")
                input.form-input(type="text", name="name", placeholder="Enter Channel Name")   
              div
                button.btn#createChannelButton(type='submit') Create Channel
              div
                button.closeCreateChannel(type='button') X
  div.directMessage
    div
      button(type="button" id="dmDropdown") Direct Message
      div.dms
        div: a(href="/log-in" class="links") @ User1
        div: a(href="/log-in" class="links") @ User2
        div: a(href="/sign-up" class="links") + Invite People
    
  
