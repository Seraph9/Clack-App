      div 
      div#nameDisplay
    div#modal
      div#modal-container 
        div#fullName
        div#modalContent
          img(src="./images/moon-emoji.png" id="avatar")
        div.profile-button
          button.modal-button(type="submit" id="profile") View profile
        //- div
